        </tbody>
    </table>

    <table>
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio unitario</th>
            </tr>
        </thead>
        <tbody>
            {% for pedidoProducto in pedido.pedidoProductos %}
