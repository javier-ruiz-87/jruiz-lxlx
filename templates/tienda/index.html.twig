{% extends 'base.html.twig' %}

{% block title %}Tienda index{% endblock %}

{% block body %}
    <h1>Tienda index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tienda in tiendas %}
            <tr>
                <td>{{ tienda.id }}</td>
                <td>{{ tienda.nombre }}</td>
                <td>{{ tienda.direccion }}</td>
                <td>{{ tienda.createdAt ? tienda.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('tienda_show', {'id': tienda.id}) }}">show</a>
                    <a href="{{ path('tienda_edit', {'id': tienda.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tienda_new') }}">Create new</a>
{% endblock %}
